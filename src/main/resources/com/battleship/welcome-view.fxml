<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="25.0" stylesheets="@styles.css"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.battleship.controllers.WelcomeController"
      prefWidth="500" prefHeight="400">

    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0"/>
    </padding>

    <Label text="BATTLESHIP" styleClass="title-text"/>
    <Label text="COMMANDER EDITION" style="-fx-text-fill: #3498db; -fx-font-weight: bold; -fx-font-size: 16px;"/>

    <VBox alignment="CENTER" spacing="10">
        <Label text="Enter your Nickname to Deploy:" styleClass="subtitle-text"/>
        <TextField fx:id="nicknameField" maxWidth="250" promptText="Admiral's Name" alignment="CENTER"/>
    </VBox>

    <Button text="START NEW MISSION" onAction="#onPlayButtonClick" styleClass="button, action-btn" prefWidth="250"/>

    <Label text="- OR -" style="-fx-text-fill: gray; -fx-font-weight: bold;"/>

    <Button text="RESUME OPERATION" onAction="#onContinueButtonClick" styleClass="button, continue-btn" prefWidth="250"/>
</VBox>