<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="15.0" stylesheets="@styles.css"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.battleship.controllers.GameController"
      prefWidth="950" prefHeight="700">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: rgba(0,0,0,0.3); -fx-background-radius: 10; -fx-padding: 10;">
        <Label text="BATTLESHIP" styleClass="title-text" style="-fx-font-size: 24px;"/>

        <StackPane HBox.hgrow="ALWAYS" />

        <VBox alignment="CENTER_RIGHT">
            <Label text="MISSION TIME" style="-fx-text-fill: lightgray; -fx-font-size: 10px;"/>
            <Label fx:id="timerLabel" text="00:00" styleClass="timer-label"/>
        </VBox>
    </HBox>

    <Label fx:id="statusLabel" text="Welcome Admiral! Awaiting orders..."
           style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-effect: dropshadow(one-pass-box, black, 2, 0, 0, 1);"/>

    <Separator opacity="0.3"/>

    <HBox fx:id="boardsContainer" alignment="CENTER" spacing="60.0" style="-fx-padding: 10;">
    </HBox>

    <Separator opacity="0.3"/>

    <HBox alignment="CENTER" spacing="30" style="-fx-background-color: rgba(255,255,255,0.1); -fx-background-radius: 15; -fx-padding: 15;">

        <VBox alignment="CENTER" spacing="5">
            <Label text="TACTICAL CONTROLS" style="-fx-text-fill: #3498db; -fx-font-weight: bold; -fx-font-size: 10px;"/>
            <HBox spacing="10">
                <Button text="Rotate Ship" onAction="#onRotateClick" styleClass="button"/>
                <Label fx:id="orientationLabel" text="HORIZONTAL" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-border-color: white; -fx-padding: 5; -fx-border-radius: 3;"/>
            </HBox>
        </VBox>

        <Separator orientation="VERTICAL"/>

        <Button fx:id="btnStart" text="ENGAGE ENEMY" disable="true" onAction="#onStartGame" styleClass="button, action-btn"/>

        <Button fx:id="btnRestart" text="RESTART MISSION" visible="false" onAction="#onRestartGame" style="-fx-background-color: #c0392b; -fx-text-fill: white; -fx-font-weight: bold;"/>

        <Button text="ðŸ‘" onAction="#onShowEnemyBoard"
                style="-fx-background-color: transparent; -fx-text-fill: #00ffff; -fx-font-size: 22px; -fx-cursor: hand;"/>
    </HBox>

</VBox>